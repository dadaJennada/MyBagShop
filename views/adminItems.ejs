<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="/adminItems.css">
    <title>Document</title>
</head>
<body>
    <main>
        <div>
            <div class="name">
                <h2><span style="font-size:20px">Hello, </span><%=admin.username%></h2>
            </div>
            <div class="container con1">
                <div class="products">
                    <h2 class='wmnText'style="color:white;margin-top: 15px;">Men</h2>
                    <div class="men">
                            <%for(let item of items){%>
                                <%if(item.categery==='Male'){%>
                                <div class="card" id='<%=item._id%>'  onclick=show(this.id)>
                                    <img src=<%=item.img%> alt=""></img>
                                    <div class="price">
                                        <h3 style="color:green">@<%=item.price%></h3>
                                    </div>
                                    <h5 class='itemName' style="font-size: 20px;width:220px;;color:white;padding:0px;"> 
                                        <%if(item.name.length<25){%>
                                            <%=item.name%>
                                        <%}else{%>
                                            <%=slcN(item.name)%>...
                                            <%}%>
                                    </h3>
                                    <div class="manrat" >
                                        <h5 style="color:white; font-size: 14px;">By
                                            <%if(item.manufracturer.length<19){%>
                                                <%=item.manufracturer%>
                                            <%}else{%>
                                                <%=slcM(item.manufracturer)%>...
                                                <%}%>
                                            </h5>
                                        <h5 style="color:orange; font-size: 14px;">Rating <%=item.rating%></h5>
                                    </div>
                                </div>
                                <%}%>
                            <%}%>
                    </div>
                    <div class="women">
                        <h2 class="wmnText" style="color:white">Women</h2>
                        <div class="wmnProducts">
                            <%for(let item of items){%>
                                <%if(item.categery=='Female'){%>
                                <div class="card" id='<%=item._id%>' onclick=show(this.id)>
                                    <img src=<%=item.img%> alt=""></img>
                                    <div class="price">
                                        <h3 style="color:green">@<%=item.price%></h3>
                                    </div>
                                    <h5 class='itemName' style="font-size: 20px;width:220px;;color:white;padding:0px;"> 
                                        <%if(item.name.length<19){%>
                                            <%=item.name%>
                                        <%}else{%>
                                            <%=slcN(item.name)%>...
                                            <%}%>
                                    </h3>
                                    <div class="manrat" >
                                        <h5 style="color:white; font-size: 14px;">By
                                            <%if(item.manufracturer.length<19){%>
                                                <%=item.manufracturer%>
                                            <%}else{%>
                                                <%=slcM(item.manufracturer)%>...
                                                <%}%>
                                            </h5>
                                        <h5 style="color:orange; font-size: 14px;">Rating <%=item.rating%></h5>
                                    </div>
                                </div>
                                <%}%>
                            <%}%>
                        </div>
                    </div>
                </div>
            </div>
            
        </div>
        <nav class="nv">
            <div class="navItems">
                <div class="logout" style="margin-right: 0px;">
                    <a href="/logout" style="color:white" class="btn">Logout</a>
                </div>
                <div class="admImg">
                    <img style='width:100px;height:100px;border-radius: 100%;'src=<%=admin.img%> alt="">
                </div>
                <div class="admName">
                    <h3><%=admin.username%></h3>
                </div>
                <button class="btn btnHome" >HOME</button><br>
                <button class="btn btnAdd" onclick="addFunction()">ADD ITEM</button>
                <img class='navImg' src="/mybagshop-white.png" alt="">
            </div>
        </nav>
        <!-- <div class="logout">
            <button class="btn">Logout</button>
        </div> -->
        
    </main>
    <script>
        function addFunction(){
            document.location.href = '/addITem';
        }

        function show(_id){
            document.location.href = '/show/'+_id;
        }
    </script>
</body>
</html>